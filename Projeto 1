import pyautogui
import time

def alert_and_pause(message, pause_time=0.5):
    pyautogui.alert(message)
    pyautogui.PAUSE = pause_time

alert_and_pause("O código vai começar. Não utilize nada do computador até o código finalizar!")

pyautogui.hotkey('winleft', 'r')
time.sleep(0.5)
pyautogui.write('temp')
time.sleep(0.5)
pyautogui.press('enter')
time.sleep(0.5)
pyautogui.hotkey('ctrl', 'a')
time.sleep(1)
pyautogui.press('delete')
time.sleep(3)
pyautogui.hotkey('ctrl', 'w')
time.sleep(2)


pyautogui.hotkey('winleft', 'r')
time.sleep(0.5)
pyautogui.write('%temp%')
time.sleep(0.5)
pyautogui.press('enter')
time.sleep(0.5)
pyautogui.hotkey('ctrl', 'a')
time.sleep(0.5)
pyautogui.press('delete')
time.sleep(3)
pyautogui.press('up')
time.sleep(2)
pyautogui.press('enter')
time.sleep(2)
pyautogui.press('down')
time.sleep(2)
pyautogui.press('right')
time.sleep(2)
pyautogui.press('enter')
time.sleep(2)
pyautogui.hotkey('ctrl', 'w')
time.sleep(2)


pyautogui.hotkey('winleft', 'r')
time.sleep(0.5)
pyautogui.write('Prefetch')
time.sleep(0.5)
pyautogui.press('enter')
time.sleep(0.5)
pyautogui.hotkey('ctrl', 'a')
time.sleep(0.5)
pyautogui.press('delete')
time.sleep(3)
pyautogui.press('up')
time.sleep(2)
pyautogui.press('enter')
time.sleep(2)
pyautogui.press('down')
time.sleep(2)
pyautogui.press('right')
time.sleep(2)
pyautogui.press('enter')
time.sleep(2)
pyautogui.hotkey('ctrl', 'w')
time.sleep(2)

alert_and_pause("O código foi finalizado. Você já pode utilizar o computador!")
